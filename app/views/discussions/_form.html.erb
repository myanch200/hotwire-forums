<%= form_with(model: discussion) do |form| %>
  
  <% if discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(discussion.errors.count, "error") %> prohibited this discussion from being saved:</h2>

      <ul>
        <% discussion.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  


  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, placeholder: 'example: How to exit vim', class: 'form-control' %>
  </div>


  <div class="mb-3">
    <%= form.label :pinned, class: 'form-label' %>
    <%= form.check_box :pinned %>
  </div>

  <div class="mb-3">
    <%= form.label :closed, class: 'form-label' %>
    <%= form.check_box :closed %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>